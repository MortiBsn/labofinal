<Window x:Class="WpfApp4.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid x:Name="test" Background="white">
        <TextBox x:Name="police" Margin="288,117,288,248" Visibility="Visible" IsReadOnly="False" Background="Gray" Text="1"/>
        <ComboBox x:Name="ajouter" Margin="288,10,288,322" Text="Ajouter" IsReadOnly="True" SelectionChanged="changer">
            <ComboBoxItem>Rouge</ComboBoxItem>
            <ComboBoxItem>Vert</ComboBoxItem>
            <ComboBoxItem>Bleu</ComboBoxItem>
            <ComboBoxItem>Jaune</ComboBoxItem>
        </ComboBox>
        <Button x:Name="Changer" Visibility="Visible" Margin="0,322,523,0" Content="Changer" Click="Changer_click"/>
        <Button x:Name="Cancel" Visibility="Visible" Content="Cancel" Margin="554,322,0,0" Click="Cancel_Click"/>
        <Button x:Name="Applique" Visibility="Visible" Margin="277,322,246,0" Content="Appliqué" Click="Appliquer"/>
    </Grid>
</Window>
